@model Prueba_Tecnica.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

    <div class="form-group text-center">
        <div class="row centeredContentDiv">
            <div class="col-md-5 ">
                <div class="ibox float-e-margins">
                    <div class="ibox-content text-center transparentBackgroud">
                        <img src="~/Img/logo.png" style="width: 60%; height: 60%" />
                    </div>

                    <div class="ibox-content transparentBackgroud">
                        <form asp-controller="Login" asp-action="Login" method="post">
                            @Html.AntiForgeryToken()
                            <div class="validation-summary-valid" data-valmsg-summary="true">
                                <ul><li style="display:none"></li></ul>
                            </div>
                            <div class="form-group centeredContentDiv">
                                <div class="col-lg-6">
                                    <div class="input-group m-b classForLoginBox">
                                        <span class="input-group-addon"><img src="~/Img/user.svg" style="width: 25px;height: 25px" /></span>
                                        <input type="text" asp-for="UserName" placeholder="Usuario" class="form-control">
                                    </div>
                                    <span asp-validation-for="UserName" class="font-bold"></span>
                                </div>
                            </div>
                            <div class="form-group centeredContentDiv">
                                <div class="col-lg-6">
                                    <div class="input-group m-b classForLoginBox">
                                        <span class="input-group-addon"><img src="~/Img/password.svg" style="width: auto;height: auto" /></span>
                                        <input type="Password" asp-for="UserPassword" placeholder="Contraseña" class="form-control">
                                    </div>
                                    <span asp-validation-for="UserPassword" class="font-bold"></span>
                                </div>
                            </div>
                            <div class="form-group centeredContentDiv">
                                <div class="col-lg-8">
                                    @if (TempData["IsAtuhtenticated"] != null && !Convert.ToBoolean(TempData["IsAtuhtenticated"]))
                                    {
                                        <div class="alert alert-danger p-xxs font-bold text-center">
                                            Las credenciales son incorrectas, favor de verificarlas
                                        </div>
                                    }
                                </div>
                            </div>
                            <br>
                            </br><br>
                            </br><br>
                            </br>


                            <div class="form-group text-center">
                                <div>
                                    <button class="btn btn-primary" type="submit">Entrar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
